if previousActivity || nextActivity
  nav.my-4(aria-label="page navigation")
    ul.pagination.justify-content-start
      li.page-item#previous-activity(class=(previousActivity ? undefined : "disabled"))
        if previousActivity
          a.prev-activity.page-link(href=toValidPath("/" + repositoryName + "/" + activity.xourse.path + "/" + previousActivity),aria-label="previous activity")             
            | &larr; <span id="prev-activity-label">Vorige</span>
        //- else
        //-   span.prev-activity.page-link(aria-label="previous activity",href="#")              
        //-     | &larr; <span id="prev-activity-label">Vorige</span>
      li.page-item.ml-auto#next-activity(class=(nextActivity ? undefined : "disabled"),completion-blink="",aria-label="next activity")
        if nextActivity
          a.next-activity.page-link(href=toValidPath("/" + repositoryName + "/" + activity.xourse.path + "/" + nextActivity))
            | <span id="next-activity-label">Volgende</span> &rarr;
        //- else
        //-   span.next-activity.page-link(aria-label="next activity")              
        //-     | <span id="next-activity-label">Volgende</span> &rarr;
